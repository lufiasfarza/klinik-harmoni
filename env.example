# Environment Variables for Klinik Harmoni Frontend

# API Configuration
# For local development with harmoni-clinic backend:
VITE_API_URL=http://localhost:8000/api/public
# For production:
# VITE_API_URL=https://app.klinikharmoni.my/api/public
VITE_API_TIMEOUT=10000

# External Services
VITE_WHATSAPP_API_URL=https://api.whatsapp.com/send
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# App Configuration
VITE_APP_NAME=Klinik Harmoni
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_FACEBOOK_PIXEL_ID=your_fb_pixel_id_here

# Error Monitoring (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_MONITORING=false
VITE_ENABLE_PWA=false
